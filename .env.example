# BookEqualizer - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ================================
# DATABASE
# ================================
DATABASE_URL=postgresql://username:password@localhost:5432/bookequalizer
# Production: Use connection string from your hosting provider

# ================================
# AUTHENTICATION (Clerk)
# ================================
CLERK_SECRET_KEY=your_clerk_secret_key_here
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
# Get these from: https://dashboard.clerk.dev

# ================================
# TEXT-TO-SPEECH APIs
# ================================

# Google Cloud Text-to-Speech (Recommended)
GOOGLE_TTS_API_KEY=your_google_cloud_tts_api_key
GOOGLE_CLOUD_PROJECT_ID=your_project_id
# Enable at: https://console.cloud.google.com/apis/library/texttospeech.googleapis.com

# Azure Speech Services (Alternative)
AZURE_SPEECH_KEY=your_azure_speech_key
AZURE_SPEECH_REGION=your_azure_region
# Get from: https://portal.azure.com/

# Amazon Polly (Alternative)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# ================================
# AI SERVICES
# ================================

# OpenAI (Primary)
OPENAI_API_KEY=your_openai_api_key
# Get from: https://platform.openai.com/api-keys

# Anthropic Claude (Alternative)
ANTHROPIC_API_KEY=your_anthropic_api_key
# Get from: https://console.anthropic.com/

# ================================
# APPLICATION SETTINGS
# ================================

# API Base URL
NEXT_PUBLIC_API_URL=http://localhost:3001
# Production: https://your-api-domain.com

# Frontend URL
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Production: https://your-app-domain.com

# ================================
# FILE STORAGE
# ================================

# Local storage path for uploads
UPLOAD_DIR=./uploads
AUDIO_CACHE_DIR=./audio-cache

# CDN for audio files (Production)
AUDIO_STORAGE_URL=https://your-cdn-domain.com
CDN_API_KEY=your_cdn_api_key

# ================================
# PERFORMANCE & CACHING
# ================================

# Redis cache (Optional, for production)
REDIS_URL=redis://localhost:6379
# Production: Use Redis hosting service

# Rate limiting
RATE_LIMIT_PUBLIC=60
RATE_LIMIT_AUTHENTICATED=300

# TTS cost management
MAX_TTS_CHARS_PER_DAY=100000
TTS_CACHE_TTL_HOURS=168

# ================================
# MONITORING & ANALYTICS
# ================================

# Sentry error tracking (Optional)
SENTRY_DSN=your_sentry_dsn
SENTRY_ORG=your_org
SENTRY_PROJECT=your_project

# Posthog analytics (Optional)
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ================================
# DEVELOPMENT SETTINGS
# ================================

# Environment
NODE_ENV=development
# Options: development, production, test

# Debug logging
DEBUG=bookequalizer:*
LOG_LEVEL=debug

# Port settings
PORT=3001
FRONTEND_PORT=3000
AI_SERVICE_PORT=8000

# ================================
# SECURITY
# ================================

# JWT Secret (generate a secure random string)
JWT_SECRET=your_super_secure_jwt_secret_here

# CORS origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# File upload limits
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=.epub,.pdf,.txt

# ================================
# PGVECTOR (AI Embeddings)
# ================================

# Embedding model settings
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSIONS=1536
SIMILARITY_THRESHOLD=0.8

# ================================
# AUDIO PROCESSING
# ================================

# Audio quality settings
AUDIO_QUALITY=high
# Options: low, medium, high

# Voice settings
DEFAULT_VOICE=en-US-Neural2-D
DEFAULT_SPEAKING_RATE=1.0
DEFAULT_PITCH=0.0

# Audio file formats
AUDIO_FORMAT=mp3
# Options: mp3, wav, ogg

# ================================
# DEVELOPMENT TOOLS
# ================================

# Database seeding
SEED_DATABASE=false
SEED_SAMPLE_BOOKS=false

# Mock services for development
USE_MOCK_TTS=false
USE_MOCK_AI=false

# ================================
# NOTES
# ================================

# 1. Never commit .env file to git
# 2. Use different values for development/staging/production
# 3. Rotate secrets regularly in production
# 4. Keep TTS API keys secure - they incur costs
# 5. Monitor usage to prevent unexpected charges