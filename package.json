  "keywords": ["ai", "reading", "audio", "tts", "education"],
  "author": "BookEqualizer Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "@clerk/clerk-sdk-node": "^5.0.0",
    "prisma": "^5.7.0",
    "@prisma/client": "^5.7.0",
    "multer": "^1.4.5-lts.1",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "@google-cloud/text-to-speech": "^5.3.0",
    "microsoft-cognitiveservices-speech-sdk": "^1.34.0",
    "aws-sdk": "^2.1691.0",
    "node-cache": "^5.1.2",
    "fluent-ffmpeg": "^2.1.2",
    "epub2": "^3.0.1",
