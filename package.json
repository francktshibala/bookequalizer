    "@types/compression": "^1.7.5",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "tsx": "^4.6.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/node-cache": "^4.2.5",
    "@types/mime-types": "^2.1.4"
  }
